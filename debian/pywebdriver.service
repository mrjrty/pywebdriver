[Install]
WantedBy=multi-user.target

[Unit]
Description=Pywebdriver
After=network.target

[Service]
Restart=always
RestartSec=5
User=pywebdriver
Group=ssl-cert
ExecStart=/opt/venvs/pywebdriver/bin/gunicorn -c /opt/venvs/pywebdriver/lib/python3.6/site-packages/pywebdriver/wsgi.py pywebdriver:app
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
